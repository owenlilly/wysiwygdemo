extends ./../_layout.pug

block content
	div(ng-controller='mainController as vm')
		div.row
			div.col-md-9(ng-init='vm.getLatestPreviews()')
				articles(ng-repeat="article in vm.articles")
			div.col-md-3
				div(style='margin-top: 20px;', ng-repeat='sideItem in vm.sideItems')
					span(style='color: #7f7f7f; font-weight: 300;') {{sideItem.title}}
					br
					span(style='margin-bottom: 5px; display: block; font-weight: 300; font-style: italic') {{sideItem.desc}}
					hr(style='clear: left; margin: 0px; border-top: 1px solid #e1e1e1;')
					ul(style='padding: 10px 20px;')
						li(ng-repeat='opt in sideItem.options') {{opt}}

block scripts
	script(src='/libs/rxjs/dist/rx.js')
	script(src='/js/services/story.js')
	script(src='/libs/moment/moment.js')
	script(src='/js/controllers/mainController.js')
